<!-- Initialize Swiper -->
<script>
    var swiper = new Swiper('.images_list', {
        paginationClickable: true,
        spaceBetween: 0
    });


    var character_swiper = new Swiper('.character_swiper', {
        slidesPerView: 3,
        paginationClickable: true,
        spaceBetween: 10
    });

    var card_swiper = new Swiper('.cast_swiper', {
